<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="500.0" style="-fx-background-color: #1a2238;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AddSpeciesController">

    <VBox spacing="15" style="-fx-padding: 30;">
        <!-- Header -->
        <Label style="-fx-font-size: 24px;                        -fx-font-weight: bold;                       -fx-text-fill: white;" text="Tambah Species Baru" />

        <Separator style="-fx-background-color: white;" />

        <!-- Form Fields -->
        <VBox spacing="10">
         <Label prefWidth="606.0" style="-fx-text-fill: white; -fx-font-size: 14px;" text="Anda dapat mengirimkan spesies baru, dan admin akan melakukan pengecekan serta persetujuan." />
            <Label style="-fx-text-fill: #90caf9;                           -fx-font-size: 14px;" text="Nama Species" />
            <TextField fx:id="nameField" style="-fx-background-color: rgba(255,255,255,0.1);                              -fx-text-fill: white;                              -fx-background-radius: 5;                              -fx-border-color: #2196F3;                              -fx-border-radius: 5;                              -fx-padding: 10;" />

            <Label style="-fx-text-fill: #90caf9;                           -fx-font-size: 14px;" text="Nama Latin" />
            <TextField fx:id="latinNameField" style="-fx-background-color: rgba(255,255,255,0.1);                              -fx-text-fill: white;                              -fx-background-radius: 5;                              -fx-border-color: #2196F3;                              -fx-border-radius: 5;                              -fx-padding: 10;" />

            <Label style="-fx-text-fill: #90caf9;                           -fx-font-size: 14px;" text="Jenis (Flora/Fauna)" />
            <TextField fx:id="typeField" style="-fx-background-color: rgba(255,255,255,0.1);                              -fx-text-fill: white;                              -fx-background-radius: 5;                              -fx-border-color: #2196F3;                              -fx-border-radius: 5;                              -fx-padding: 10;" />

            <Label style="-fx-text-fill: #90caf9;                           -fx-font-size: 14px;" text="Deskripsi" />
            <TextArea fx:id="descriptionField" prefHeight="150" style="-fx-control-inner-background: #1a2238; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #1a2238; -fx-border-color: #2196F3; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 1;" wrapText="true" />

            <Label style="-fx-text-fill: #90caf9;                           -fx-font-size: 14px;" text="Gambar" />
            <HBox spacing="10">
                <TextField fx:id="imageUrlField" editable="false" promptText="Pilih gambar..." style="-fx-background-color: rgba(255,255,255,0.1);                                  -fx-text-fill: white;                                  -fx-background-radius: 5;                                  -fx-border-color: #2196F3;                                  -fx-border-radius: 5;                                  -fx-padding: 10;" HBox.hgrow="ALWAYS" />
                <Button onAction="#chooseImage" style="-fx-background-color: #2196F3;                                -fx-text-fill: white;                                -fx-background-radius: 5;                                -fx-padding: 10 20;" text="Browse">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
            </HBox>
        </VBox>

        <Region VBox.vgrow="ALWAYS" />

        <!-- Submit Button -->
        <Button maxWidth="Infinity" onAction="#saveSpecies" style="-fx-background-color: #4CAF50;                        -fx-text-fill: white;                        -fx-font-size: 16px;                        -fx-background-radius: 5;                        -fx-padding: 15;" text="Kirim">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
    </VBox>
</AnchorPane>
