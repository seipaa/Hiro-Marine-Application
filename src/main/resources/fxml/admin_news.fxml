<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx/11"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controllers.NewsAdminController"
           style="-fx-background-color: white;">
           
    <!-- Title Bar -->
    <top>
        <HBox fx:id="titleBar" alignment="CENTER_LEFT" style="-fx-background-color: #2196F3; -fx-padding: 5;">
            <Label text="Hiro's Marine - SEA EDUCATION" 
                   style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: white;"
                   HBox.hgrow="ALWAYS"/>
            <Button text="âœ•" 
                    onAction="#closeWindow"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14; -fx-cursor: hand;"/>
            <padding>
                <Insets top="5" right="10" bottom="5" left="10"/>
            </padding>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Search Bar -->
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="searchField" 
                          promptText="Cari berita..." 
                          prefWidth="400"/>
                <Button fx:id="searchButton"
                        text="Cari" 
                        onAction="#handleSearch"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                <Button fx:id="resetButton"
                        text="Reset" 
                        onAction="#handleReset"
                        style="-fx-background-color: #757575; -fx-text-fill: white;"/>
            </HBox>

            <HBox spacing="20">
                <!-- Form Section -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #E0E0E0; -fx-border-radius: 5;" prefWidth="400">
                    <Label text="Form Berita" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                    
                    <Label text="Judul Berita"/>
                    <TextField fx:id="titleField" promptText="Masukkan judul berita"/>
                    
                    <Label text="Deskripsi"/>
                    <TextArea fx:id="descriptionField" 
                             promptText="Masukkan deskripsi berita"
                             wrapText="true" 
                             prefRowCount="4"/>
                    
                    <Label text="Gambar"/>
                    <HBox spacing="10">
                        <TextField fx:id="imageUrlField" 
                                  promptText="URL Gambar" 
                                  HBox.hgrow="ALWAYS"/>
                        <Button text="Pilih File" 
                                onAction="#handleChooseImage"
                                style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                    </HBox>
                    
                    <Label text="Admin"/>
                    <ComboBox fx:id="adminIdComboBox" 
                              promptText="Pilih ID Admin"
                              prefWidth="200"/>
                    
                    <CheckBox fx:id="breakingNewsCheckBox" text="Breaking News"/>
                    
                    <Button fx:id="saveButton"
                            text="Tambah Berita"
                            onAction="#handleSave"
                            style="-fx-background-color: #2196F3; -fx-text-fill: white;"
                            prefWidth="Infinity"
                            prefHeight="35"/>

                    <Button fx:id="clearButton"
                            text="Bersihkan"
                            onAction="#handleClear"
                            style="-fx-background-color: #f44336; -fx-text-fill: white;"
                            prefWidth="Infinity"
                            prefHeight="35"/>
                </VBox>

                <!-- Table Section -->
                <VBox spacing="10" HBox.hgrow="ALWAYS">
                    <Label text="Daftar Berita" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                    
                    <TableView fx:id="newsTableView" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                            <TableColumn fx:id="titleColumn" text="Judul" prefWidth="200"/>
                            <TableColumn fx:id="descriptionColumn" text="Deskripsi" prefWidth="300"/>
                            <TableColumn fx:id="adminIdColumn" text="ID Admin" prefWidth="100"/>
                            <TableColumn fx:id="actionColumn" text="Aksi" prefWidth="100"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                    <Pagination fx:id="pagination"/>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
