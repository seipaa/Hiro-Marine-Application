<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AdminMarineSpeciesController">
    <children>
        <!-- Background -->
        <Rectangle fill="#1a2238" height="767.0" width="1065.0" />

        <!-- Main Container -->
        <HBox spacing="30" style="-fx-padding: 30;">
            <!-- Form Input Section -->
            <VBox prefWidth="400" spacing="20" style="-fx-background-color: rgba(0,0,0,0.2); -fx-padding: 20; -fx-background-radius: 15;">
                <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white; -fx-font-family: 'Arial';" text="Marine Species Admin Panel" />

                <VBox spacing="15">
                    <Label style="-fx-text-fill: white; -fx-font-size: 14px;" text="Nama Species" />
                    <TextField fx:id="speciesNameField" style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-background-radius: 8; -fx-border-color: #2196F3; -fx-border-radius: 8; -fx-padding: 12; -fx-font-size: 14px;" />

                    <Label style="-fx-text-fill: white; -fx-font-size: 14px;" text="Nama Latin" />
                    <TextField fx:id="speciesLatinNameField" style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-background-radius: 8; -fx-border-color: #2196F3; -fx-border-radius: 8; -fx-padding: 12; -fx-font-size: 14px;" />

                    <Label style="-fx-text-fill: white; -fx-font-size: 14px;" text="Jenis Species (Flora/Fauna)" />
                    <TextField fx:id="speciesTypeField" style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-background-radius: 8; -fx-border-color: #2196F3; -fx-border-radius: 8; -fx-padding: 12; -fx-font-size: 14px;" />

                    <Label style="-fx-text-fill: white; -fx-font-size: 14px;" text="Deskripsi" />
                    <TextArea fx:id="speciesDescriptionField" prefHeight="120.0" style="-fx-control-inner-background: #1a2238; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: rgba(255,255,255,0.1); -fx-border-color: #2196F3; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10;" wrapText="true" />

                    <Label style="-fx-text-fill: white; -fx-font-size: 14px;" text="Gambar" />
                    <HBox spacing="10">
                        <TextField fx:id="speciesImageUrlField" editable="false" promptText="Pilih gambar..." style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-background-radius: 8; -fx-border-color: #2196F3; -fx-border-radius: 8; -fx-padding: 12; -fx-font-size: 14px;" HBox.hgrow="ALWAYS" />
                        <Button onAction="#chooseImage" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 12 20; -fx-background-radius: 8; -fx-font-size: 14px;" text="Pilih File">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                    </HBox>
                </VBox>

                <!-- CRUD Buttons -->
                <HBox spacing="15" style="-fx-padding: 10 0 0 0;">
                    <Button onAction="#addSpecies" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 12 25; -fx-background-radius: 8; -fx-font-size: 14px;" text="Tambah">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </Button>
                    <Button onAction="#updateSpecies" style="-fx-background-color: #FFC107; -fx-text-fill: white; -fx-padding: 12 25; -fx-background-radius: 8; -fx-font-size: 14px;" text="Update">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </Button>
                    <Button onAction="#deleteSpecies" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-padding: 12 25; -fx-background-radius: 8; -fx-font-size: 14px;" text="Hapus">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </Button>
                </HBox>
            </VBox>

            <!-- Lists Section -->
            <VBox spacing="25" style="-fx-padding: 20;">
                <!-- Pending Species Section -->
                <VBox spacing="15">
                    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #4CAF50; -fx-font-family: 'Arial';" text="Species Pending" />
                    <ListView fx:id="pendingSpeciesListView" prefHeight="200" style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 10;">
                        <style>
                            .list-cell {
                            -fx-text-fill: white;
                            -fx-padding: 12;
                            -fx-font-size: 14px;
                            }
                            .list-cell:filled:selected {
                            -fx-background-color: #4CAF50;
                            }
                            .list-cell:filled:hover {
                            -fx-background-color: rgba(76,175,80,0.3);
                            }
                        </style>
                    </ListView>
                    <HBox spacing="15">
                        <Button onAction="#approveSpecies" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 12 25; -fx-background-radius: 8; -fx-font-size: 14px;" text="Setujui Species">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                        <Button onAction="#rejectSpecies" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-padding: 12 25; -fx-background-radius: 8; -fx-font-size: 14px;" text="Tolak Species">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                    </HBox>
                </VBox>

                <!-- Approved Species Section -->
                <VBox spacing="15">
                    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #4CAF50; -fx-font-family: 'Arial';" text="Species Disetujui" />
                    <ListView fx:id="approvedSpeciesListView" prefHeight="200" style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 10;">
                        <style>
                            .list-cell {
                            -fx-text-fill: white;
                            -fx-padding: 12;
                            -fx-font-size: 14px;
                            }
                            .list-cell:filled:selected {
                            -fx-background-color: #4CAF50;
                            }
                            .list-cell:filled:hover {
                            -fx-background-color: rgba(76,175,80,0.3);
                            }
                        </style>
                    </ListView>
                </VBox>
            </VBox>
        </HBox>

        <!-- Image Preview Section -->
        <VBox layoutX="792.0" layoutY="29.0" prefHeight="180.0" prefWidth="180.0" spacing="10">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white; -fx-font-family: 'Arial';" text="Preview" />
            <ImageView fx:id="previewImage" fitHeight="250.0" fitWidth="250.0" preserveRatio="true" style="-fx-background-radius: 10; -fx-border-color: #2196F3; -fx-border-radius: 10; -fx-border-width: 2;" />
        </VBox>
    </children>
</AnchorPane>
